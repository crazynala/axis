{
  "name": "axis",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prebuild": "npm -w packages/timber run build && npm -w packages/react-datasheet-grid run build",
    "build": "remix vite:build",
    "seed:admin": "node scripts/seed-admin.js",
    "seed:value-lists": "tsx scripts/seed-value-lists.ts",
    "seed:locations": "tsx scripts/seed-locations.ts",
    "seed:sale-price-groups": "tsx scripts/seed-sale-price-groups.ts",
    "seed:primary-costings": "tsx scripts/seed-primary-costings.ts",
    "backfill:assembly-actions": "tsx scripts/backfill-assembly-actions.ts",
    "debug": "node --inspect-brk server.mjs",
    "predev": "prisma generate",
    "dev": "remix vite:dev",
    "dev:vite": "vite",
    "dev:manual": "REMIX_DEV_ORIGIN=http://localhost:8002 sh -c 'remix dev --manual --port 8002 & sleep 1 && node server.cjs'",
    "prestart": "prisma migrate deploy && prisma generate",
    "start": "cross-env NODE_ENV=production remix-serve ./build/server/index.js",
    "start:express": "cross-env NODE_ENV=production node server.cjs",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "postinstall": "prisma generate",
    "db:reset": "tsx scripts/reset-db.ts",
    "db:who": "npx dotenv -e .env -- sh -c 'echo DATABASE_URL=$DATABASE_URL; psql \"$DATABASE_URL\" -c \"\\\\conninfo\"'",
    "db:truncate": "npx dotenv -e .env -- sh -c 'psql \"$DATABASE_URL\" -v ON_ERROR_STOP=1 -f scripts/truncate-db.sql'",
    "db:truncate:confirm": "npx node -e \"const rl=require('readline').createInterface({input:process.stdin,output:process.stdout});rl.question('This will TRUNCATE all public tables (except _prisma_migrations). Continue? [y/N] ', a=>{if(a.toLowerCase()==='y'){process.exit(0)}else{process.exit(1)}})\" && npm run db:truncate",
    "spec:verify": "tsx ./scripts/verify-spec.ts",
    "precommit": "npm run spec:verify && npm run typecheck",
    "test": "npm run spec:verify && tsx ./scripts/test-buildWhere.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@mantine/charts": "^8.2.8",
    "@mantine/core": "^8.2.0",
    "@mantine/dates": "^8.2.0",
    "@mantine/dropzone": "^8.2.0",
    "@mantine/hooks": "^8.2.0",
    "@mantine/modals": "^8.2.0",
    "@mantine/notifications": "^8.2.0",
    "@prisma/client": "^5.18.0",
    "@react-pdf/renderer": "^4.3.0",
    "@remix-run/express": "^2.17.0",
    "@remix-run/node": "^2.17.0",
    "@remix-run/react": "^2.17.0",
    "@tabler/icons-react": "^3.34.1",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/react-virtual": "^3.13.12",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "compression": "1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "mantine-datatable": "^7.15.1",
    "npm": "^11.6.0",
    "pino": "^9.9.4",
    "react-datasheet-grid": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.62.0",
    "test": "^3.3.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.17.0",
    "@remix-run/fs-routes": "^2.17.1",
    "@remix-run/route-config": "^2.17.1",
    "@remix-run/serve": "^2.17.0",
    "@types/express": "^4.17.21",
    "@types/node": "^18.11.18",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "cpx": "^1.5.0",
    "@vitejs/plugin-react": "^5.0.2",
    "dotenv-cli": "^10.0.0",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prisma": "^5.18.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.4.5",
    "vite": "^5.4.0"
  }
}
